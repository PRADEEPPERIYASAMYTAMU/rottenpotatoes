<div class="container">
  <h1>Editing: <%= @movie.title %></h1>

  <%# Section to display the movie's current details %>
  <div class="movie-details-card">
    <h2>Current Details</h2>
    <p>
      <strong>Rating:</strong> <%= @movie.rating %>
    </p>
    <p>
      <strong>Released:</strong> <%= @movie.release_date&.strftime('%B %d, %Y') %>
    </p>
    <p>
      <strong>Description:</strong><br>
      <%= @movie.description %>
    </p>
  </div>

  <%# The form to edit the movie, styled by your existing custom.css %>
  <h2>Edit Movie Details</h2>
  <%= render "form", movie: @movie %>

  <hr>

  <%# Navigation and Delete Button Section %>
  <div class="page-actions">
    <%= link_to "Show This Movie", @movie, class: 'btn' %>
    <%= link_to "Back to Movies", movies_path, class: 'btn' %>

    <%# A styled button for the delete action with a confirmation prompt %>
    <%= button_to "Delete This Movie", @movie, method: :delete,
        class: 'btn btn-danger',
        data: { confirm: 'Are you sure you want to permanently delete this movie?' } %>
  </div>
</div>
